<Window x:Class="ChristmasGiftClient.Controller.CreateOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChristmasGiftClient.Controller"
        mc:Ignorable="d"
        Title="CreateOrderWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Controller/images/background1.jpg"/>
        </Grid.Background>
        <TextBox x:Name="txtBudget" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="10,182,0,0" Height="19" IsReadOnly="True" Text="0,0" TextAlignment="Right"/>










        <Button  x:Name="btnSubmitCustomOrder"   Content="{DynamicResource m_btnSubmitCustomOrder}"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,381,0,0" Click="btnSubmitCustomOrder_Click" Width="76"/>
        <Label  x:Name="lblCandles"  Content="{DynamicResource m_lblCandles}" HorizontalAlignment="Left" Margin="92,157,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lbxCandles" Margin="92,182,576,78" SelectionMode="Multiple" SelectionChanged="ListBox_SelectionChanged">

        </ListBox>
        <Label x:Name="lblClothes"   Content="{DynamicResource m_lblClothes}" HorizontalAlignment="Left" Margin="246,157,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lbxClothes" SelectionMode="Multiple" Margin="246,182,422,78" SelectionChanged="ListBox_SelectionChanged"/>
        <Label  x:Name="lblCookies"  Content="{DynamicResource m_lblCookies}" HorizontalAlignment="Left" Margin="400,157,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lbxCookies" SelectionMode="Multiple" Margin="400,182,268,78" SelectionChanged="ListBox_SelectionChanged"/>
        <Label  x:Name="lblOrnaments"  Content="{DynamicResource m_lblOrnaments}" HorizontalAlignment="Left" Margin="552,157,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lbxOrnaments" SelectionMode="Multiple" Margin="552,182,116,78" SelectionChanged="ListBox_SelectionChanged"/>



    </Grid>
</Window>
