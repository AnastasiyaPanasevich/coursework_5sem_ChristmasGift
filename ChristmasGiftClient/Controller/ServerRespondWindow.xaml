<Window x:Class="ChristmasGiftClient.Controller.ServerRespondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChristmasGiftClient.Controller"
        mc:Ignorable="d"
        Title="ServerRespondWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Controller/images/background1.jpg"/>
        </Grid.Background>

        <Label x:Name="lblServerRespond" Content="respond" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button  x:Name="btnExit"   Content="{DynamicResource m_btnExit}"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="335,283,0,0" Click="btnExit_Click"/>
        <Button  x:Name="btnRetry"   Content="{DynamicResource m_btnRetry}"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="435,283,0,0" Click="btnRetry_Click"/>


    </Grid>
</Window>
