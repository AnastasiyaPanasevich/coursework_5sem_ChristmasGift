<Window x:Class="ChristmasGiftClient.Controller.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChristmasGiftClient.Controller"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Controller/images/background1.jpg"/>


        </Grid.Background>
        <Grid HorizontalAlignment="Left" Height="99" Margin="74,217,0,0" VerticalAlignment="Top">

            <TextBox x:Name="EmailTextBox"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="350" Margin="0,33,0,0"/>

            <Button  x:Name="btnDone"   Content="{DynamicResource m_btnDone}"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="133,79,0,0" Click="btnDone_Click"/>
            <Label x:Name="lblEnterEmail" Content="{DynamicResource m_lblEnterEmail}"  Foreground="White" FontWeight="Bold" Height="NaN" Margin="0,0,550,71" Width="NaN" />

        </Grid>

    </Grid>
</Window>
